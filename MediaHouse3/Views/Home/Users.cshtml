@{
    ViewBag.Title = "Users";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Users</h2>

<table border="1">
    <tr>
        <th>Username</th>
        <th>First Name</th>
        <th>Last Name</th>
        <th>E-mail Address</th>
        <th>Options</th>
    </tr> 
    
    @foreach (var user in Model)
    {
        <tr>
            <td>@user.UserName</td>
            <td>@user.firstName</td>
            <td>@user.lastName</td>
            <td>@user.email</td>
            <td>
                @Html.ActionLink("View", "ViewAuthor", new { username = user.UserName})
                @Html.ActionLink("Edit", "EditUser", new { username = user.UserName})
                @Html.ActionLink("Delete", "DeleteUser", new { username = user.UserName }, new { onclick = "return window.confirm('Are you sure you want to delete this user?')"})
            </td>
        </tr>
    }     
</table>